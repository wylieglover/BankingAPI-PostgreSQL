{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@prisma/*": [
        "prisma/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@types/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../dist",
    "**/*.spec.ts"
  ]
}